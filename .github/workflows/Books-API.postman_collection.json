		{
			"name": "Register API client",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Successful POST request\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([201, 202]);",
							"});",
							"",
							"pm.test(\"Check if access Token is filled\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.accessToken).to.not.eql(null);",
							"    if (jsonData.accessToken) {",
							"        pm.collectionVariables.set(\"accessToken\", jsonData.accessToken);",
							"    }",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var randomString = Math.random().toString(36).substring(2, 15) + Math.random().toString(36).substring(2, 15) + \"@example.com\";",
							"pm.environment.set(\"randomString\", randomString);",
							"console.log (randomString);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
