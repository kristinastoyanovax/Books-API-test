		{
			"name": "List of books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"const response = pm.response.json();",
							"",
							"const nonFictionBooks = response.filter((book) => book.available === true);",
							"",
							"console.log(nonFictionBooks[0]);",
							"pm.globals.get(\"bookId\", nonFictionBooks[0]);",
							"",
							"//might fail if number of books changes or when we test non-fiction responce",
							"// pm.test(\"Body should have 6 books\", function () {",
							"//     var jsonData = pm.response.json();",
							"//     pm.expect(jsonData.length).to.eql(6);",
							"// });",
							"// will fail when getting all books",
							"pm.test(\"Check if response only has non-fiction\", function () {",
							"    var jsonData = pm.response.json();",
							"    for (let i = 0; i < jsonData.length; i++) {",
							"        pm.expect(jsonData[i].type).to.eql(\"non-fiction\");",
							"    }",
							"    ",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
